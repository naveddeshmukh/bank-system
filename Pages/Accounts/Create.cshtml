@page
@model BankSystem.Pages.Accounts.CreateModel
@{
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Edit User</h3></div>
                <div class="card-body">
                    <form id="user-setup" method="post">
         
                        <div class="form-floating mb-3">
                            <div class="form-check form-check-inline">
                                <input type="radio" asp-for="Input.AccountType" class="form-check-input" type="radio" value="C" />
                                <label class="form-check-label">Current</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input type="radio" asp-for="Input.AccountType" class="form-check-input" type="radio" value="S" />
                                <label class="form-check-label">Savings</label>
                            </div>
                            <span asp-validation-for="Input.AccountType" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.InitialDepositAmount" class="form-control" aria-required="true" />
                            <label asp-for="Input.InitialDepositAmount" class="form-label"></label>
                            <span asp-validation-for="Input.InitialDepositAmount" class="text-danger"></span>
                        </div>
                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                            <button id="setup-submit" type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-3">
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }